import React from "react";
import { BrowserRouter as Router, Routes, Route, Link } from "react-router-dom";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";

const Home = () => (
  <div className="p-6 text-center">
    <h1 className="text-4xl font-bold mb-4">Welcome to NoteMD</h1>
    <p className="text-lg">A smarter way to manage healthcare notes and data.</p>
  </div>
);

const About = () => (
  <div className="p-6 max-w-2xl mx-auto">
    <h2 className="text-3xl font-semibold mb-4">About NoteMD</h2>
    <p>
      NoteMD is a medical platform designed to simplify communication and data sharing
      between patients and healthcare providers. We focus on secure, efficient, and
      accessible health information management.
    </p>
  </div>
);

const PatientPortal = () => (
  <div className="p-6 max-w-xl mx-auto">
    <h2 className="text-2xl font-semibold mb-4">Patient Portal</h2>
    <Card>
      <CardContent>
        <p className="mb-2">Access your health data, lab results, and communicate securely with your provider.</p>
        <Button>View Records</Button>
      </CardContent>
    </Card>
  </div>
);

const ProviderPortal = () => (
  <div className="p-6 max-w-xl mx-auto">
    <h2 className="text-2xl font-semibold mb-4">Provider Portal</h2>
    <Card>
      <CardContent>
        <p className="mb-2">Manage patient records, appointments, and monitor analytics.</p>
        <Button>Access Dashboard</Button>
      </CardContent>
    </Card>
  </div>
);

const Navbar = () => (
  <nav className="bg-blue-600 text-white p-4 shadow-md flex justify-between">
    <div className="font-bold text-xl">NoteMD</div>
    <div className="space-x-4">
      <Link to="/" className="hover:underline">Home</Link>
      <Link to="/about" className="hover:underline">About</Link>
      <Link to="/patient" className="hover:underline">Patient Portal</Link>
      <Link to="/provider" className="hover:underline">Provider Portal</Link>
    </div>
  </nav>
);

export default function App() {
  return (
    <Router>
      <div className="min-h-screen bg-gray-50">
        <Navbar />
        <Routes>
          <Route path="/" element={<Home />} />
          <Route path="/about" element={<About />} />
          <Route path="/patient" element={<PatientPortal />} />
          <Route path="/provider" element={<ProviderPortal />} />
        </Routes>
      </div>
